        <Button title="View more..." />
      </CardWorks>

      <CardWorks
        title="Work 2"
        image="/images/work2.jpg"
        desc="Lorem ipsum dolor sit amet consectetur adipisicing elit. Repellat numquam atque maiores. Unde fuga recusandae eos odio earum. Officiis hic earum excepturi sit dolorem voluptas modi maiores voluptatem labore porro?"
      >

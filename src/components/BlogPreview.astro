---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<div class="p-5">
  <div class="flex bg-gray-200 rounded-xl shadow-lg"> 
    <div class="w-1/2 p-5 my-auto">
      <h2 class="text-green-400 text-3xl">{post.frontmatter.title}</h2>
      <div>
        <p class="my-4">{post.frontmatter.desc}</p>
        <p>{post.frontmatter.author}</p>
        <p class="mb-10 text-xs">{post.frontmatter.date}</p>
        <a href={post.url} class="bg-green-400 hover:bg-gray-200 border-2 border-green-400 p-2 text-white hover:text-green-400 rounded">Read post</a>
      </div>
    </div>
    <div class="w-1/2">
      <img src={post.frontmatter.image} alt="image" class="rounded-br-xl rounded-tr-xl" />
    </div>
  </div>
</div>
